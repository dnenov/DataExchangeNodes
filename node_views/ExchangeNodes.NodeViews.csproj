<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0-windows</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PlatformTarget>x64</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <UseWPF>true</UseWPF>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- Force all NuGet package dependencies (including transitive) to be copied to output -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <!-- Package Details -->
  <PropertyGroup>
    <RootNamespace>DataExchangeNodes.NodeViews</RootNamespace>
    <AssemblyName>ExchangeNodes.NodeViews</AssemblyName>
    <Authors>Autodesk</Authors>
    <Description>View customizations for DataExchange Dynamo nodes</Description>
    <Company>Autodesk</Company>
    <Version>0.1.0</Version>
    <Copyright>Copyright Â© 2025</Copyright>
  </PropertyGroup>

  <!-- Dynamo version for build dependencies -->
  <PropertyGroup>
    <DynamoVersion>4.1.0-beta3200</DynamoVersion>
    <DynamoInstallVersion>4.1</DynamoInstallVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DynamoVisualProgramming.Core" Version="$(DynamoVersion)" ExcludeAssets="runtime" />
    <PackageReference Include="DynamoVisualProgramming.WpfUILibrary" Version="$(DynamoVersion)" ExcludeAssets="runtime" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" ExcludeAssets="runtime" />
    
    <!-- DataExchange UI SDK 6.2.12-beta - Include ALL assets -->
    <PackageReference Include="Autodesk.DataExchange.UI" Version="6.2.12-beta" PrivateAssets="none" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- Dynamo Core for AuthenticationManager access -->
    <Reference Include="DynamoCore">
      <HintPath>C:\Users\nenovd\Documents\GitHub\Dynamo\bin\AnyCPU\Debug\DynamoCore.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <!-- Greg for authentication provider interfaces -->
    <Reference Include="Greg">
      <HintPath>C:\Users\nenovd\Documents\GitHub\Dynamo\bin\AnyCPU\Debug\Greg.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <!-- Reference to node_models and nodes projects -->
  <ItemGroup>
    <ProjectReference Include="..\node_models\ExchangeNodes.NodeModels.csproj" />
    <ProjectReference Include="..\nodes\ExchangeNodes.csproj" />
  </ItemGroup>

  <!-- Output path to match ForgeParameterNodes pattern -->
  <PropertyGroup>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <OutputPath>..\bin\$(Configuration)\$(DynamoVersion)\DataExchangeNodes</OutputPath>
  </PropertyGroup>

  <!-- Include entire FDXToCollab folder with all native DLLs (DynamoATF approach) -->
  <ItemGroup>
    <None Include="..\native\FDXToCollab\**\*.*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>FDXToCollab\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </None>
  </ItemGroup>

  <!-- Also copy specific DLLs to bin root (required by .NET assembly loader) -->
  <ItemGroup>
    <None Include="..\native\FDXToCollab\Autodesk.GeometryPrimitives.IO.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\native\FDXToCollab\Autodesk.GeometryPrimitives.Data.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\native\FDXToCollab\Autodesk.GeometryUtilities.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\native\FDXToCollab\Autodesk.GeometryUtilities.MeshAPI.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\native\FDXToCollab\Autodesk.GeometryUtilities.MeshAPI.IO.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\native\FDXToCollab\Autodesk.DataExchange.OpenAPITools.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Post-build step to create distributable package -->
  <Target Name="PostBuild" AfterTargets="AfterBuild">
    <Exec Command="call $(SolutionDir)PostBuildStep.bat $(SolutionDir) $(Platform) $(Configuration) $(DynamoVersion) $(DynamoInstallVersion)" />
  </Target>
</Project>

